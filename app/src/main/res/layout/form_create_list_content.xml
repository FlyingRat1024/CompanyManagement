<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/form_create_list_content_show_material"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_weight="3"></TextView>
        <TextView
            android:id="@+id/form_create_list_content_show_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_weight="3"></TextView>
        <TextView
            android:id="@+id/form_create_list_content_show_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_weight="3"/>
        <ImageButton
            android:id="@+id/form_create_list_content_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/blue_remove"
            android:scaleType="centerCrop"
            android:background="@color/pureWhite" />
    </LinearLayout>
</LinearLayout>