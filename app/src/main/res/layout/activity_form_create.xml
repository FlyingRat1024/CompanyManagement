<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormCreate">
    <TextView
        android:id="@+id/form_create_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello~"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <android.support.v7.widget.CardView
        app:layout_constraintTop_toBottomOf="@+id/form_create_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/lightGray"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/form_create_creator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_detail_creator"/>
            <TextView
                android:id="@+id/form_create_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_detail_status"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>